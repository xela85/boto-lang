
def checkConsulterProfil(name) {
	put link "Consulter le profil" in a;
	put "patato" in b;
	check a contains name;
	check a length = 255;
	check a length > 255;
	check a length < 125;
	check a contains not b;
}

def yahoo() {
	goto "https://yahoo.com";
	fill field "UHSearchBox" with "Panda roux";
	click button "Recherche web";
	check link "Ailurus fulgens" contains "WikipÃ©dia";
}

