grammar org.emn.fil.boto.BotoLang with org.eclipse.xtext.common.Terminals

generate botoLang "http://www.emn.org/fil/boto/BotoLang"

Model:
	(functions+=Function)*
	(browsers+=Browser)*;
	
Browser:
	'browser' name=STRING '{'
		(tabs+=Tab)*
	'}';

Tab:
	'tab' name=STRING '{'
		instructions=InstructionList
	'}'
;


InstructionList: 
	(instructions+=(Goto | Click | Check | Fill | Put | FunctionCall) ";")*
;

//////////////////
// Instructions //
//////////////////

Goto: 
	"goto" url=STRING
;

Click: 
	"click" object=Object
;

Fill:
	"fill" object=Object "with" value=STRING
;

Check:
	"check" object=Object "contains" (stringValue=STRING | variable=[Variable])
;


Predicate: 
	(keyword="contains" (stringValue=STRING | variable=[Variable])) |
	(keyword="length" secondKeyword=("equals" | "more than" | "less than") value=INT )
	
;

Put: 
	"put" (object=Object | string=STRING) "in" variable=Variable
;


Variable: name=ID;

Object: (html=Html param=STRING) | variable=[Variable];


Html: tag=("button" | "field" | "link");


//////////////////
//   Functions  //
//////////////////

Function: 
	"def" name=FunctionName "(" ((variables+=Variable ("," variables+=Variable)*)?")" "{"
		instructions=InstructionList
		"}"
	)
;

FunctionCall: FunctionName "(" (variables+=[Variable] | stringVariables+=STRING 
	("," variables+=[Variable] | stringVariables+=STRING)*
)? ")";

FunctionName: id=ID;

