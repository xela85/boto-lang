grammar org.emn.fil.boto.BotoLang with org.eclipse.xtext.common.Terminals

generate botoLang "http://www.emn.org/fil/boto/BotoLang"

Model:
	(functions+=Function)*
	(browsers+=Browser)*;
	
Browser:
	'browser' name=STRING '{'
		(tabs+=Tab)*
	'}';

Tab:
	'tab' name=STRING '{'
		(instructions+=(Goto | Click | Check | Fill | Put) ";")*
	'}'
;


//////////////////
// Instructions //
//////////////////

Goto: 
	"goto" url=STRING
;

Click: 
	"click" object=Object
;

Fill:
	"fill" object=Object "with" value=STRING
;

Check:
	"check" object=Object "contains" value=STRING
;

Put: 
	"put" object=Object "in" variable=Variable
;


Variable: name=ID;

Object: (html=Html param=STRING) | variable=[Variable];


Html: tag=("button" | "field" | "link");


//////////////////
//   Functions  //
//////////////////

Function: 
	"def" name=ID "(" ((variables+=ID ("," variables+=ID)*)*")" "{"
		(instructions+=(Goto | Click | Check | Fill | Put) ";")*
		"}"
	)
;

